<div class="card" style="width: 100%;">
    <img src="{{quest_img}}" class="card-img-top w-10 h-10" alt="image" style="margin: auto;">
    <div class="card-body">
        <p class="card-text">{{question.text}}</p>
    </div>
    <div class="has-text-left mb-3" id="radio-questions">
    {{#each question.responses as |response|}}
        <div class="form-check">
            <input class="form-check-input" type="radio" name="flexRadioDefault" id={{response.id}}>
            <label class="form-check-label" for="flexRadioDefault1">
                {{response}}
            </label>
        </div>
    {{/each}}
    </div>
</div>

